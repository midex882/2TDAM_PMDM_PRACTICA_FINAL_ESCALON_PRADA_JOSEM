<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:id="@+id/pictureCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="25dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user"></ImageView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/usernameLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/pictureCard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="cochino69"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:textSize="16sp"></TextView>

    <TextView
        android:id="@+id/emailLayout"
        app:layout_constraintTop_toBottomOf="@id/usernameLayout"
        app:layout_constraintStart_toEndOf="@id/pictureCard"
        android:layout_marginLeft="20dp"
        android:text="cochino69@gmail.com"
        android:textColor="@color/light_grey"
        android:layout_width="150dp"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/nameLayout"
        app:layout_constraintTop_toBottomOf="@id/emailLayout"
        app:layout_constraintStart_toEndOf="@id/pictureCard"
        android:layout_marginLeft="20dp"
        android:text="Manuel Jimenez"
        android:textColor="@color/light_grey"
        android:layout_width="150dp"
        android:layout_height="wrap_content"></TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buyButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/buy_button_background">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>